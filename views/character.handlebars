<div id="characterPage" class="container-fluid d-flex flex-row" style="height: 100%;">  

    <div id="statsContainer" class="d-flex flex-column justify-content-around p-2 m-2 col-2">
        <ul class="list-group" id="basicInfo">
            <h3 class="text-center text-light bg-gradient p-2 m-0" id="equipHead" style="background-color: #751312;">Basic Info</h3>
            <li class="list-group-item">Name: {{character.name}}</li>
            <li class="list-group-item">Class: {{character.class}}</li>
            <li class="list-group-item">Level: {{character.level}}</li>
        </ul>
        <ul class="list-group" id="baseStats">
            <h3 class="text-center text-light bg-gradient p-2 m-0" id="equipHead" style="background-color: #751312;">Base Stats</h3>
            <li class="list-group-item">Attack: {{character.base_atk}}</li>
            <li class="list-group-item">Defense: {{character.base_def}}</li>
            <li class="list-group-item">HP: {{character.base_hp}}</li>
            <li class="list-group-item">Mana: {{character.base_mana}}</li>
        </ul>
        <ul class="list-group" id="calculatedStats">
            <h3 class="text-center text-light bg-gradient p-2 m-0" id="equipHead" style="background-color: #751312;">Actual Stats</h3>
            <li class="list-group-item">Attack: <span id="calculatedAtk"></span></li>
            <li class="list-group-item">Defense: <span id="calculatedDef"></span></li>
            <li class="list-group-item">HP: <span id="calculatedHp"></span></li>
            <li class="list-group-item">Mana: <span id="calculatedMana"></span></li>
        </ul>
    </div>

    <div id="itemsAndSpells" class="d-flex flex-column justify-content-around col-3">
        
        <div class="bg-primary m-2 h-50" id="equipment">
            <h2 class="text-center text-light bg-gradient p-2" id="equipHead" style="background-color: #751312;">Equpiment</h2>
            <div id="equipmentList">
                <h3>Weapon: {{weapon.name}}</h3>
                <ul>
                    <li>
                        {{weapon.bonus_atk}}
                    </li>
                    <li>
                        {{weapon.level_req}}
                    </li>
                </ul>
                <h3>Armor: {{armor.name}}</h3>
                <ul>
                    <li>
                        {{armor.bonus_def}}
                    </li>
                    <li>
                        {{armor.level_req}}
                    </li>
                </ul>
            </div>
        </div>

        <div class="bg-primary m-2 h-50" id="spells">
            <h2 class="text-center text-light bg-gradient p-2" style="background-color: #751312;">Spells</h2>
        </div>

    </div>

    <div id="artContainer" class="container-fluid bg-primary m-2 d-flex justify-content-center" style="height: auto;">
        <img class="img-fluid h-100" src="https://cdnb.artstation.com/p/assets/images/images/016/620/149/large/dongwoo-kim-artstation-man.jpg?1552849944" alt="character_art">
    </div>
</div>